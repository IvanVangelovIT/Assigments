<div id="app">
    <button type="button" class="btn btn-primary" @@click="getAnimals">Get All</button>
    <button type="button" class="btn btn-success" @@click="feedAnimal">Feed</button>
    <button type="button" class="btn btn-danger" @@click="starveAnimal">Starve</button>
    <button type="button" class="btn btn-info" @@click="getAnimalsSurvivors">Survivors</button>
    <button type="button" class="btn btn-light align-self-sm-end" @@click="reset">Reset</button>
    <hr />
    <div>
        <table class="table table-striped table-hover position-absolute col-sm-9">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Damage Taken</th>
                <th>Points Gain</th>
                <th>Health</th>
            </tr>
            <tr v-for="animal in animals">
                <td>{{animal.id}}</td>
                <td>{{animal.name}}</td>
                <td class="text-danger">{{animal.damageTaken}}</td>
                <td class="position-relative">{{animal.healthPointsRecieved}}</td>
                <td v-if="animal.isAlive" class="alert-success">({{animal.health}})[{{animal.healthPoints}}]</td>
                <td v-if="!animal.isAlive" class="alert-danger">({{animal.health}})[{{animal.healthPoints}}]</td>
            </tr>
        </table>
    </div>       
</div>